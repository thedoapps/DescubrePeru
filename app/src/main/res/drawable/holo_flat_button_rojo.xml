<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado Presionado -->
    <item android:state_pressed="true"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <corners android:radius="6dp" />

                    <solid android:color="@color/rojo_pomegranate" />
                </shape></item>
            <item android:bottom="3dp"><shape android:shape="rectangle">
                    <corners android:radius="6dp" />

                    <solid android:color="@color/rojo_pomegranate" />
                </shape></item>
        </layer-list></item>

    <!-- Estado Focuseado -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item><shape android:shape="rectangle">
                <corners android:radius="6dp" />

                <solid android:color="@color/rojo_pomegranate" />
            </shape></item>
        <item android:bottom="3dp"><shape android:shape="rectangle">
                <corners android:radius="6dp" />

                <solid android:color="@color/rojo_pomegranate" />
            </shape></item>
    </layer-list>

    <!-- Estado Normal -->
    <item><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <corners android:radius="6dp" />

                    <solid android:color="@color/rojo_pomegranate" />
                </shape></item>
            <item android:bottom="3dp"><shape android:shape="rectangle">
                    <corners android:radius="6dp" />

                    <solid android:color="@color/rojo_alizarin" />
                </shape></item>
        </layer-list></item>

</selector>