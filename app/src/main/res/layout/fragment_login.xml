<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/portada_ruta_gastronomica"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:background="@drawable/holo_flat_button_facebook"
            android:layout_margin="10dp"
            android:id="@+id/btnentrarfacebook"
            android:text="@string/login_fb"
            android:layout_gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/holo_flat_button_twitter"
            android:text="@string/login_tw"
            android:layout_gravity="center_horizontal|bottom" />

        </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/user"
        android:layout_gravity="center_horizontal|top" />


</FrameLayout>