<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado Presionado -->
    <item android:state_pressed="true"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/color_flat_twitter_b" />
                </shape></item>
            <item android:bottom="3dp"><shape android:shape="rectangle">
                    <solid android:color="@color/color_flat_twitter_b" />
                </shape></item>
        </layer-list></item>

    <!-- Estado Focuseado -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item><shape android:shape="rectangle">
                <solid android:color="@color/color_flat_twitter_b" />
            </shape></item>
        <item android:bottom="3dp"><shape android:shape="rectangle">
                <solid android:color="@color/color_flat_twitter_b" />
            </shape></item>
    </layer-list>

    <!-- Estado Normal -->
    <item><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/color_flat_twitter_b" />
                </shape></item>
            <item android:bottom="3dp"><shape android:shape="rectangle">
                    <solid android:color="@color/color_flat_twitter_a" />
                </shape></item>
        </layer-list></item>

</selector>