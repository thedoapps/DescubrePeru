<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_gauss"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/joyful_logo_splash" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <include layout="@layout/com_parse_ui_parse_login_form" />

            <include layout="@layout/com_parse_ui_parse_login_third_party_section" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>